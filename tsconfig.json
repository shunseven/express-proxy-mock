{
  "compilerOptions": {
   "target": "ES6", // 或者 "ES2020" 等
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "main/**/*", 
    "main/types/global.d.ts"
  ],
  "exclude": ["node_modules"]
}